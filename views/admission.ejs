                    <img src="imgAd/logo3.png" alt="Logo 3" class="logo">
                    <img src="imdAd/logo4.png" alt="Logo 4" class="logo">
                </div>
            </div>
        </div>

        <!-- footer -->
        <%- include('footer') %>

